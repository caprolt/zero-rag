# ZeroRAG Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# Database Configuration
# =============================================================================

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=zero_rag_documents
QDRANT_VECTOR_SIZE=384  # Dimension for all-MiniLM-L6-v2 embeddings

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600  # Cache TTL in seconds

# =============================================================================
# AI Model Configuration
# =============================================================================

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=30
OLLAMA_MAX_TOKENS=2048
OLLAMA_TEMPERATURE=0.7

# HuggingFace Fallback Configuration
HF_MODEL_NAME=TheBloke/Llama-3.2-1B-Chat-GGUF
HF_MODEL_FILE=llama-3.2-1b-chat.Q4_K_M.gguf
HF_DEVICE=cpu
HF_MAX_LENGTH=2048

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_LENGTH=512

# =============================================================================
# Application Configuration
# =============================================================================

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_LOG_LEVEL=info

# Document Processing
MAX_FILE_SIZE=50MB
SUPPORTED_FORMATS=txt,csv,md
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=1000

# RAG Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000
ENABLE_STREAMING=true

# =============================================================================
# Security & Performance
# =============================================================================

# Security
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:8501", "http://127.0.0.1:8501"]
API_KEY=
RATE_LIMIT_PER_MINUTE=60

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# Logging & Monitoring
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/zero_rag.log
ENABLE_DEBUG=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Development Settings
# =============================================================================

# Development
DEBUG=true
ENVIRONMENT=development
ENABLE_HOT_RELOAD=true
TEST_MODE=false

# Data Storage
DATA_DIR=./data
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed
CACHE_DIR=./data/cache
