# ZeroRAG Docker Environment Configuration
# This file contains environment variables for Docker deployment

# Database Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=zerorag_documents

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Ollama Configuration
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.2:1b

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://frontend:3000"]

# Document Processing
MAX_FILE_SIZE=10485760  # 10MB
SUPPORTED_FORMATS=["txt", "md", "csv"]
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Search Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Cache Configuration
CACHE_TTL=3600  # 1 hour
SESSION_TTL=86400  # 24 hours
